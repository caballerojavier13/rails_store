<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>


<h1>Featured Pieces</h1>



<table>
	<% @products.in_groups_of(3, false).each do |group| %> 
<tr>
	 <% group.each do |product| %>
<td class='entry'>
<%= image_tag(product.image_url, class: 'image img-thumbnail') %>
<dl>
<dt><%= product.title %></dt>
<dd class="bold"><%= number_to_currency(product.price)%>
</br></br>
<%= link_to 'More Info', product_path(product), :class => "btn btn-default" %>
</br></br>
<%= button_to 'Add to Cart', cart_items_path(product_id: product), :class => "btn btn-primary" %>
</dd> </dl>
<%end%>
</td>
</tr>
<% end %>
</table>


