<% if notice %>
<p id="notice"><%= notice %></p>
<% end %> 

<h1>Administrators</h1>
</br>

<table class="table table-striped table-bordered ">
  <thead>
    <tr>
      <th>User Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class =>"btn btn-default" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, :class =>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class =>"btn btn-info" %>
