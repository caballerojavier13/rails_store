<h1>Listing of Customer's Orders</h1>
</br>

<table class="table table-striped table-bordered ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>

      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= link_to 'More Info', order, :class =>"btn btn-default" %></td>
        <td><%= link_to 'Edit Order', edit_order_path(order), :class =>"btn btn-info" %></td>
        <td><%= link_to 'Delete Order', order, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

