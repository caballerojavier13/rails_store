<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2 class="underline">Your Shopping Cart</h2>
</br>

<table class="table table-striped">
<thead>
	<tr>
		<th>Item:</th>
		<th></th>
		<th>Price:</th>
				<th>Quantity:</th>
		<th></th>
		<th class="total">Total:</th>
	</tr>
</thead>
	<% @cart.cart_items.each do |item| %>
<tr>
<td><%= image_tag(item.product.image_url, class: 'image-desc img-thumbnail') %></td>
<td><%= item.product.title %></td>

<td><%= number_to_currency(item.product.price) %></td>


<td>&times; <%= item.quantity %>
<td>
<ul class="inc">
<li><%= image_tag("up.png", class: 'inc-dec') %></li>
<li><%= image_tag("down.png", class: 'inc-dec') %></li>
</ul>
</td>
</td>

<td class="price"> <%= number_to_currency(item.total_price) %></td>
</tr>
 <% end %>
 <tr class="total">
  <td colspan="5">Total:</td>
  <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
</tr>
</table>


<table>
<tr>
<td><%= button_to 'Empty cart', @cart, method: :delete, data: { confirm:
	'Are you sure you want to remove all items from your cart?' }, :class => "btn btn-warning" %></td>
	<td class="spacer"></td>
<td><%= link_to "Continue Shopping", session[:last_page], :class => "btn btn-default" %><td>
<td class="space"><%= button_to "Checkout", session[:last_page], :class => "btn btn-success" %><td>
</tr>
</table>







